{% block body %}

    {% include 'flash.html.twig' %}

    <div class="margin-bottom">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#labelPrintModal">
            <i class="fa fa-fw fa-print"></i> Re-Print Selected Tubes
        </button>
    </div>

    {{ form_start(form) }}

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 2em;"><input type="checkbox" id="check-all"></th>
                <th>Accession ID</th>
                <th>Type</th>
                <th>Kit Type</th>
                <th>Status</th>
                <th>Printed At</th>
            </tr>
        </thead>
        <tbody>
        {% for tube in tubes %}
            <tr>
                <td>
                    <input type="checkbox" class="tube-checkbox" name="tubes[]" value="{{ tube.accessionId }}">
                </td>
                <td>{{ tube.accessionId }}</td>
                <td>{{ tube.typeText }}</td>
                <td>{{ tube.kitType }}</td>
                <td>{{ tube.statusText }}</td>
                <td>{{ tube.printedAt is empty ? '' : tube.printedAt|date("Y-m-d g:ia") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal fade modal-primary" id="labelPrintModal" tabindex="-1" role="dialog" aria-labelledby="labelPrintModalLabel" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-center" id="labelPrintModalLabel">Re-Print Selected Tubes</h4>
                </div>
                <div class="modal-body">
                    {{ form_row(form.printer) }}
                    {{ form_row(form.labelType) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal"><i class="fa fa-chevron-left"></i> Cancel</button>
                    {{ form_row(form.print) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

<script type="application/javascript">
    $('#check-all').change(function() {
        $(".tube-checkbox").prop('checked', $(this).is(':checked'));
    });
</script>
{% endblock %}
