{% set allowPerTubeDecision = is_granted("ROLE_TUBE_CHECK_IN") %}
{% set salivaTubeType = constant('App\\Entity\\Tube::TYPE_SALIVA') %}
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            {% if displayRowCheckboxes %}
            <th style="width: 2em;"><input type="checkbox" id="check-all"></th>
            {% endif %}
            <th>Tube Accession ID</th>
            <th>Type</th>
            <th>Printed At</th>
            <th>Collected At <span class="glyphicon glyphicon-question-sign text-primary" aria-hidden="true" title="Date/Time Specimen collected by Participant. For example, when they spit in the tube."></span></th>
            <th>Returned At <span class="glyphicon glyphicon-question-sign text-primary" aria-hidden="true" title="Date/Time Tube returned at a Kiosk."></span></th>
            {% if allowPerTubeDecision %}<th style="width:100px; text-align:center;">Reject</th>{% endif %}
        </tr>
    </thead>
    <tbody>
    {% for tube in tubes %}
        <tr class="row-tube-{{ tube.accessionId|e('html_attr') }}">
            {% if displayRowCheckboxes %}
            <td>
                {% if tube.tubeType == salivaTubeType %}
                <input type="checkbox" class="tube-checkbox" name="tubeAccessionIds[]" value="{{ tube.accessionId|e('html_attr') }}">
                {% endif %}
            </td>
            {% endif %}
            <td>{{ tube.accessionId }}</td>
            <td>{{ tube.typeText }}</td>
            <td>{{ tube.printedAt is empty ? "" : tube.printedAt|date("Y-m-d g:ia") }}</td>
            <td>{{ tube.collectedAt is empty ? "" : tube.collectedAt|date("Y-m-d g:ia") }}</td>
            <td>{{ tube.returnedAt is empty ? "" : tube.returnedAt|date("Y-m-d g:ia") }}</td>
            {% if allowPerTubeDecision %}
            <td style="text-align:center;">
                {# Reject #}
                <button type="button" class="btn-tube-{{ tube.accessionId|e('html_attr') }} reject-one-tube btn btn-danger btn-sm" title="Reject" data-tube-id="{{ tube.accessionId|e('html_attr') }}">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if allowPerTubeDecision %}
<script>
    $('.reject-one-tube').on('click', function() {
        const $btn = $(this);
        const tubeId = $btn.data('tube-id');
        const url = "{{ path('checkin_reject_tube') }}";

        if (!confirm("Mark Tube "+tubeId+" Rejected?")) return;

        // Send decision to server
        $.post(url, {
            tubeId: tubeId
        })
        .fail(function(responseObj) {
            // Error happened, show it
            const response = responseObj.responseJSON;
            const errorMsg = response.errorMsg;
            if (errorMsg) {
                alert(errorMsg);
                return;
            }
            alert('Cannot save Tube Rejection.');
        })
        .done(function(responseObj) {
            // Disable clicking button again
            $btn.prop('disabled', true);
        });
    });
</script>
{% endif %}
