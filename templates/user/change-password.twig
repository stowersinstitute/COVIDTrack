{% extends 'base.html.twig' %}

{% block page_title %}Change Password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-body">
                    <dl>
                        <dt>Username</dt>
                        <dd>{{ user.username }}</dd>
                    </dl>

                    {{ form(form, {
                        'attr': {
                            'autocomplete': 'off',
                        }
                    }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}