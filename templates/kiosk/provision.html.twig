{% extends 'kiosk/kiosk-base.html.twig' %}

{% block body %}
    <h2 class="page-header">Which kiosk is this?</h2>

    <div class="box">
        <div class="box-body">
            {% for kiosk in unprovisionedKiosks %}
                {% set buttonText = kiosk.label %}
                {% if kiosk.location %}
                    {% set buttonText = kiosk.label ~ " (" ~ kiosk.location ~ ")" %}
                {% endif %}

                <div class="margin-bottom">
                    <form method="post">
                        <input type="hidden" name="kioskId" value="{{ kiosk.id }}">
                        <button type="submit" class="btn btn-lg btn-primary">{{ buttonText }}</button>
                    </form>
                </div>
            {% else %}
                There are no unprovisioned kiosks. Please contact a system administrator to provision this kiosk.
            {% endfor %}
        </div>
    </div>

{% endblock %}
