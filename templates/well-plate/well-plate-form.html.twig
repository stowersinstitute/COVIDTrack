{% extends 'base.html.twig' %}

{% block page_title %}
    {% if new %} New Well Plate {% else %} Edit Well Plate {{ wellPlate.barcode }} {% endif %}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Readonly Stuff</h3>
            </div>
            <div class="box-body">
                <div class="form-horizontal">
                    <div class="field-group">
                        <label>Created</label>
                        <span>{{ wellPlate.createdAt | date('Y-m-d H:i:s') }}</span>
                    </div>
                    <div class="field-group">
                        <label>Last Modified</label>
                        <span>{{ wellPlate.updatedAt | date('Y-m-d H:i:s') }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Specimens</h3>
                </div>
                <div class="box-body">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>Accession ID</th>
                            <th>Group</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for specimen in wellPlate.specimens %}
                            <tr>
                                <td>{{ specimen.accessionId }}</td>
                                <td>{{ specimen.participantGroup }}</td>
                                <td>{{ specimen.status }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>

{% endblock %}