{% extends 'excel-import/base-excel-import-preview.html.twig' %}

{# This information is displayed below #}
{% block importSourceDescription %}{% endblock %}
{# This normally includes the count, which doesn't apply since we break it into separate tables #}
{% block importPreviewHeader %}{% endblock %}

{% block beforeTopConfirmButton %}
    {% include 'results/qpcr/excel-import-summary-widgets.html.twig' %}
{% endblock %}

{% block importPreviewSection %}
    {% if createdResults|length > 0 %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-plus text-green"></i> New <span class="badge bg-green">{{ createdResults|length }}</span></h3>
                    </div>
                    <div class="box-body">
                        {% include 'results/qpcr/excel-import-table.html.twig' with { results: createdResults } %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if updatedResults|length > 0 %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-edit text-orange"></i> Updated <span class="badge bg-orange">{{ updatedResults|length }}</span></h3>
                    </div>
                    <div class="box-body">
                        {% include 'results/qpcr/excel-import-table.html.twig' with { results: updatedResults } %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
