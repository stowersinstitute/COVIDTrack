{% extends 'base.html.twig' %}

{% block page_title %}
    {% if kiosk is empty %} New Kiosk {% else %} Edit <strong>{{ kiosk.label }}</strong> {% endif %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form(form, {
                        'attr': {
                            'autocomplete': 'off',
                        }
                    }) }}
                </div>
            </div>
        </div>

        {# Actions only apply if a kiosk is being edited #}
        {% if kiosk is not empty %}
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Actions</h3>
                    </div>
                    <div class="box-body">
                        <div class="pull-right">
                            <form method="post" action="{{ path('kiosk_admin_delete', { kioskId: kiosk.id }) }}" onsubmit="return confirm('Delete kiosk?');">
                                <input type="hidden" name="kioskId" value="{{ kiosk.id }}">
                                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
