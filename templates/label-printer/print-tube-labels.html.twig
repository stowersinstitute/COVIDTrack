{% extends 'base.html.twig' %}

{% block page_title %}Print New Tube Labels{% endblock %}

{% block body %}
    {% if displaySuccessfulPrintAlert %}
    <div class="alert alert-success" role="alert">
        {{ previousNumToPrint }} label{{ previousNumToPrint > 1 ? 's' : ''}} sent to printer {{ previousSelectedPrinter }}
    </div>
    {% endif %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}