{% extends 'excel-import/base-excel-import-preview.html.twig' %}

{# This information is displayed below #}
{% block importSourceDescription %}{% endblock %}
{# This normally includes the count, which doesn't apply since we break it into separate tables #}
{% block importPreviewHeader %}{% endblock %}

{% block importSummary %}
    {% include 'participantGroup/excel-import-summary-widgets.html.twig' %}

    {% if displayMultiWorksheetWarning %}
        {% include 'excel-import/multi-worksheet-warning.html.twig' %}
    {% endif %}
{% endblock %}

{% block importPreviewSection %}
    {% if importer.hasGroupsForAction('active') %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-check-circle text-green"></i> Active Groups <span class="badge bg-green">{{ importer.output['active']|length }}</span></h3>
                    </div>
                    <div class="box-body">
                        {% include 'participantGroup/excel-import-table.html.twig' with { groups: importer.output['active']} %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if importer.hasGroupsForAction('inactive') %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-minus-circle text-orange"></i> Inactive Groups <span class="badge bg-orange">{{ importer.output['inactive']|length }}</span></h3>
                    </div>
                    <div class="box-body">
                        {% include 'participantGroup/excel-import-table.html.twig' with { groups: importer.output['inactive']} %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
