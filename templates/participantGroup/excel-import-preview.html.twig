{% extends 'excel-import/base-excel-import-preview.html.twig' %}

{# This information is displayed below #}
{% block importSourceDescription %}{% endblock %}
{# This normally includes the count, which doesn't apply since we break it into separate tables #}
{% block importPreviewHeader %}{% endblock %}

{% block beforeTopConfirmButton %}
    {% include 'participantGroup/excel-import-summary-widgets.html.twig' %}
{% endblock %}

{% block importPreviewSection %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-plus text-green"></i> New Groups</h3>
                </div>
                <div class="box-body">
                    {% include 'participantGroup/excel-import-table.html.twig' with { groups: importer.output['created']} %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-edit text-orange"></i> Updated Groups</h3>
                </div>
                <div class="box-body">
                    {% include 'participantGroup/excel-import-table.html.twig' with { groups: importer.output['updated']} %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-trash text-red"></i> Deactivated Groups</h3>
                </div>
                <div class="box-body">
                    {% include 'participantGroup/excel-import-table.html.twig' with { groups: importer.output['deactivated']} %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}