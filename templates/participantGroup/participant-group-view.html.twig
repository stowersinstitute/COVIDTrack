{% extends 'base.html.twig' %}

{% block page_title %}
    Participant Group {{ group.title }}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    General
                    <a href="{{ path('app_participant_group_edit', {title: group.title}) }}" class="btn btn-primary btn-xs" style="margin-left:8px;"><i class="fa fa-fw fa-edit"></i> Edit</a>
                    <a href="{{ path('app_participant_group_print', {title: group.title}) }}" class="btn btn-primary btn-xs" style="margin-left:8px;"><i class="fa fa-fw fa-print"></i> Print Badge Labels</a>
                </h3>
            </div>
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>Title</dt><dd>{{ group.title }}</dd>
                    <dt>Accession ID</dt><dd>{{ group.accessionId }}</dd>
                    <dt>Participants</dt><dd>{{ group.participantCount }}</dd>
                    <dt>Drop-off Times</dt>
                    <dd>
                        <ul>
                            {% for window in group.getDropOffWindows() %}
                                <li>{{ window.getDisplayString() }}</li>
                            {% endfor %}
                        </ul>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        {% include 'audit-history.html.twig' with {auditLogs: auditLogs} %}
    </div>

</div>

{% endblock %}
