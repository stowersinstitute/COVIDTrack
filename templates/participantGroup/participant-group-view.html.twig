{% extends 'base.html.twig' %}

{% block page_title %}
    Participant Group {{ group.accessionId }}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    General
                    <a href="{{ path('app_participant_group_edit', {accessionId: group.accessionId}) }}" class="btn btn-primary btn-xs" style="margin-left:8px;"><i class="fa fa-fw fa-edit"></i> Edit</a>
                    <a href="{{ path('app_participant_group_print', {accessionId: group.accessionId}) }}" class="btn btn-primary btn-xs" style="margin-left:8px;"><i class="fa fa-fw fa-print"></i> Print Labels</a>
                </h3>
            </div>
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>Accession ID</dt><dd>{{ group.accessionId }}</dd>
                    <dt>Title</dt><dd>{{ group.title }}</dd>
                    <dt>Participants</dt><dd>{{ group.participantCount }}</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        {% include 'audit-history.html.twig' with {auditLogs: auditLogs} %}
    </div>

</div>

{% endblock %}
